@page "/counter"

@using JobBank.Server.Program.Data
@inject WebSocketTest _webSocketTest

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<p>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
</p>

<p>
<button class="btn btn-primary" @onclick="DoWebSocketTest">WebSocket test</button>
</p>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private async Task DoWebSocketTest()
    {
        await _webSocketTest.ExerciseClientSocketAsync();
    }
}
