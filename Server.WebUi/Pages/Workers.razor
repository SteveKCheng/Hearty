@page "/ui/workers"
@using Hearty.Scheduling

@inject WorkerDistribution<PromisedWork, PromiseData> _workerDistribution
@inject TimeoutProvider _timeoutProvider

<h1>Workers</h1>

<div class="content">
<table class="job-queue">
    <colgroup>
        <col class="client" />
        <col class="count" />
    </colgroup>

    <thead>
        <tr>
            <th>Client</th>
            <th>Job Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (name, worker) in _workerDistribution)
        {
            <tr>
                <td>@name</td>
                <td>@worker.AvailableResources</td>
            </tr>
        }
    </tbody>
</table>
</div>

